<div class="card">
  <h2 class="text-center card-header">Create New Post</h2>
  <form class="card-body" id="new-post-form">
    <input type="hidden" name="post-id" value="{{post.id}}"/>
<div class="input-group mb-3">
  <span class="input-group-text" id="inputGroup-sizing-default">Title:</span>
  <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" name="post-title">
</div>
<div class="form-group mb-3">
    <label for="exampleFormControlTextarea1">Content:</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" name="post-body"  rows="3"></textarea>
  </div>

   
    <button class="btn btn-primary mb-3">CREATE</button>
  </form>
</div>
<script src="/js/post.js"></script>
