<section class="new-post-section">
  <a class="btn btn-primary btn-lg mb-3" href="/dashboard/create">+ Create New Post</a>
</section>

{{#if posts.length}}
<section>
    <ul class="post-list">
        {{#each posts as |post|}}
        <li>
            {{> post-info }}  
           <button type="submit" class="btn btn-secondary btn-sm mb-3 edit-link"><a href="/api/posts/edit/{{post.id}}">Edit Post</a></button>
        </li>
        {{/each}}
    </ul>
</section>
{{/if}}

    <script src="/js/post.js"></script>

    

    
   
    